/**
 * 16-bit adder: Adds two 16-bit two's complement values.
 * The most significant carry bit is ignored.
 */
CHIP Add16 {
    IN a[16], b[16];
    OUT out[16];

    PARTS:
    HalfAdder(a=a[0], b=b[0], sum=out[0], carry=carry01);
    FullAdder(a=a[1], b=b[1], c=carry01, sum=out[1], carry=carry12);
    FullAdder(a=a[2], b=b[2], c=carry12, sum=out[2], carry=carry23);
    FullAdder(a=a[3], b=b[3], c=carry23, sum=out[3], carry=carry34);
    FullAdder(a=a[4], b=b[4], c=carry34, sum=out[4], carry=carry45);
    FullAdder(a=a[5], b=b[5], c=carry45, sum=out[5], carry=carry56);
    FullAdder(a=a[6], b=b[6], c=carry56, sum=out[6], carry=carry67);
    FullAdder(a=a[7], b=b[7], c=carry67, sum=out[7], carry=carry78);
    FullAdder(a=a[8], b=b[8], c=carry78, sum=out[8], carry=carry89);
    FullAdder(a=a[9], b=b[9], c=carry89, sum=out[9], carry=carry910);
    FullAdder(a=a[10], b=b[10], c=carry910, sum=out[10], carry=carry911);
    FullAdder(a=a[11], b=b[11], c=carry911, sum=out[11], carry=carry912);
    FullAdder(a=a[12], b=b[12], c=carry912, sum=out[12], carry=carry913);
    FullAdder(a=a[13], b=b[13], c=carry913, sum=out[13], carry=carry914);
    FullAdder(a=a[14], b=b[14], c=carry914, sum=out[14], carry=carry915);
    FullAdder(a=a[15], b=b[15], c=carry915, sum=out[15], carry=ignore);
}